<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="-10pt"
    android:background="#ffffff"
    android:paddingLeft="2dp"
    android:paddingRight="5dp"

    >


    <TextView
        android:id="@+id/show_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="2014.01.01"
        android:textSize="9dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_below="@id/show_time"
        android:layout_marginLeft="-3dp"
        android:layout_toRightOf="@id/show_time"
        android:src="@drawable/timeline_green" />

    <View
        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4.5dp"
        android:layout_toRightOf="@id/show_time"
        android:background="#A6A6A6" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/show_time"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/timeline_content">

        <ImageView
            android:id="@+id/IV_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/bg_green_circle_smic" />

        <LinearLayout
            android:id="@+id/lly_title_and_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/IV_picture"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxEms="7"
                android:textColor="#4F4F4F"
                android:singleLine="true"
                android:text="今天去爬长城"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/TV_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#5C5C5C"
                android:text="今天天气真好，所以和小伙伴们决定去爬长城"
                android:textSize="12sp" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/IV_picture"
            android:layout_below="@id/lly_title_and_content"
            android:layout_toRightOf="@id/IV_picture">

            <ImageView
                android:id="@+id/image_tag"
                android:layout_width="15px"
                android:layout_height="15px"
                android:background="@null"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/wb_icon_write_lbs_nor" />


            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="7"
                android:singleLine="true"
                android:layout_toRightOf="@id/image_tag"
                android:text="生活，运动"
                android:layout_alignParentBottom="true"
                android:textSize="9dp" />


            <TextView
                android:id="@+id/TV_position"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxEms="7"
                android:singleLine="true"
                android:layout_alignParentBottom="true"
                android:text="北京"
                android:textSize="9dp" />
            <ImageView
                android:layout_width="15px"
                android:layout_height="15px"
                android:background="@null"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@id/TV_position"
                android:src="@drawable/wb_icon_write_lbs_nor" />
        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>